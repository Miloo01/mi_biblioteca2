<p id="notice"><%= notice %></p>

<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">MI BIBLIOTECA</span>
  </div>
</nav><br>

<div class="form-group ">
  <div class="col-md-2 offset-md-0"> 
    <%= search_form_for @q do |f| %> 
      
      <div class="form-group" >
          <%= f.label :status_eq, "STATUS", class:"form-control"%>
          <%= f.select :status_eq, options_for_select(Book.statuses, @q.status_eq), {},{class: "form-control"} %>
      </div>

      <%= f.submit "Search", class: "btn btn-primary form-control" %>
      
    <% end %>
  </div>
</div>

<br><div class="p-3 mb-2 light bg-light text-black">BOOKS</div><br>



<table class="table table-striped table-bordered">
  <thead>
    <tr>
      
      <th><%= sort_link(@q, :title) %></th>
      <th>Author</th>
      <th>Date borrowed</th>
      <th>Date returned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.date_borrowed %></td>
        <td><%= book.date_returned %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

